alias ls='ls --color=auto'
alias ll='ls --color=auto -la'
alias untargz='tar -zxvf'
alias untarbz2='tar -jxvf'
alias targz='tar -pczf'
alias randpass='head -c 500 /dev/urandom | tr -dc 'a-zA-Z0-9-_!@#$%^&*()_+{}|:<>?=' | head -c 12 | { read randpass; echo $randpass; }'
alias sweechat='eval `resize` && screen -raAd weechat'

shopt -s nocasematch
if [ `lsb_release -si` == 'Ubuntu' ]; then
	alias sysupdate='sudo apt-get update && sudo apt-get upgrade'
elif [ `lsb_release -si` == 'Arch' ]; then
	alias sysupdate='sudo pacman -Syu'
elif [`lsb_release -si` == 'Fedora' ]; then
	if [ -z "$(which dnf" ]; then
		alias sysupdate='su -c "yum check-update && yum -y update"'
	else
		alias sysupdate='su -c "dnf check-update && dnf -y update"'
	fi
fi
shopt -u nocasematch
